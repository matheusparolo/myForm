extends ../templates/baseLogged

block links
    link(rel='stylesheet', href='/assets/css/global/switch.css')
    link(rel='stylesheet', href='/assets/css/global/table.css')
    link(rel='stylesheet', href='/assets/css/form/create.css')

block scripts
    script(src="/assets/js/form/create.js")

block content
    .col-12.col-card
        form#form-create.card(action='javascript:')
            input#research-id(type='hidden', value=$researchId, name="research-id")
            .card-header Cadastro de Formulário
            .card-body

                .input-group.mb-3
                    input#name.form-control(type='text', placeholder='Nome do formulário', name="name",data-required="1")

                .questions-init.mb-3
                    .pl-1.pt-1
                        h1 Questões
                    .float-right
                        input#add-question-text.btn.btn-secondary(type='button', data-type='text', value='Paragrafo')
                        input#add-question-checkbox.btn.btn-secondary(type='button', data-type='checkbox', value='Caixa de Seleção')
                        input#add-question-radio.btn.btn-secondary(type='button', data-type='radio', value='Multipla Escolha')

                #questions

            .card-footer
                .form-group.pt-3
                    input.btn.btn-primary.btn-block(type='submit', value='Cadastrar')
